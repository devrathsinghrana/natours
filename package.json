{
  "name": "natours",
  "version": "1.0.0",
  "description": "LP natours",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    
    "compile:sass": "sass sass/main.scss css/style.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 5 versions' style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "compile:sass concat:css prefix:css compress:css"
  },
  "author": "devrath",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.77.6"
  }
}
